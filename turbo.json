{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "src/**"
      ]
    },
    "release": {
      "dependsOn": [
        "build"
      ],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:css": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "build:css": {
      "outputs": [
        "styles.css"
      ],
      "inputs": [
        "src/**"
      ]
    },
    "frosted-ui#build-storybook": {
      "dependsOn": [
        "@frosted-ui/icons#build",
        "build:css"
      ],
      "outputs": [
        "storybook-static/**"
      ],
      "inputs": [
        "src/**",
        ".storybook/**"
      ]
    }
  }
}
